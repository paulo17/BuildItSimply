{% extends 'layouts/' ~ layout ~ '.twig' %}

{% block body %}

    <div class="pageHead">
        <h1>Mes projets</h1>
    </div>

    <div class="myProjet">

        <div class="wrapper">

            <div class="listProjet">
                <ul>
                    {% for project in projects %}
                        <li>
                            <h3><a href="{{ home }}projects/{{ project.id }}">{{ project.name }}</a></h3>

                            <p class="infoList">
		                            <span><img src="{{ image }}calendar.png"
                                               alt="Date de l'offre"/>{{ project.created_at | date("d F Y") }}</span>
		                            <span><img src="{{ image }}user-list.png" alt="Nombre d'offre"/>{{ project.proposition }} demande(s)</span>
                            </p>

                            <p class="textList">{{ project.description }}</p>

                            <p class="tagList">
                                {% for tag in project.tags %}
                                    <a href="#">{{ tag.tag | capitalize }}</a>
                                {% endfor %}
                            </p>

                            <hr class="clear"/>
                        </li>

                    {% endfor %}
                </ul>
                <hr class="clear"/>
            </div>
        </div>


    </div>

    <div class="push"></div>

    </div>

{% endblock %}