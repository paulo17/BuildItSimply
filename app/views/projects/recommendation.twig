{% block body %}
<div class="avisForm">
    <h3>Donner un avis</h3>
    <p>Partagez votre avis avec les autres visiteurs et vous les aidez dans leurs futurs choix.</p>
    <form method="post" action="{{ home }}recommendation/add" class="form-horizontal">

        <div class="form-group {{ (errors.grade) ? 'has-error' : '' }}">
            <label for="name" class="control-label">Note de 1 Ã  5</label>

            <div class="col-sm-10">
                <select name="grade" id="" class="form-control">
                    {% for i in 1..5 %}
                        <option value="{{ i }}">{{ i }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="form-group {{ (errors.message) ? 'has-error' : '' }}">
            <label for="recommendation" class="control-label">Votre avis</label>

            <div class="col-sm-10">
                <textarea name="message" id="message" class="form-control" rows="5" placeholder="Regider un avis"></textarea>
                <span class="help-block with-errors">{% if errors.message %}{{ errors.message }}{% endif %}</span>
            </div>
        </div>

        <input type="hidden" name="project_id" value="{{ project.id }}"/>
        <button type="submit" class="btn buttonWhite btn-default">Publier votre avis</button>

    </form>
</div>

{% endblock %}