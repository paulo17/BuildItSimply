		</div>
	</div>

		<div id="loginInfo">
			<div class="wrapper">
				<form method="post" action="{{home ~ request}}">
					<button type="submit" class="btn btn-default buttonWhite">Se connecter</button>
				</form>
				<hr class="clear"/>
			</div>

		</div>
		<div class="push"></div>

	</div><!-- end page -->
	{% endblock %}
