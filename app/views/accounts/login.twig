{% extends 'layouts/' ~ layout ~ '.twig' %}

{% block body %}

	<div id="loginHead" class="connectionhead">
		<div class="wrapper">
			<h1>Se connecter</h1>

			<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
				tempor incididunt ut labore et dolore magna aliqua.</p>

				<form method="post" action="{{home ~ request}}">
					<div class="form-group">
						<input name="email" type="email" class="form-control" id="mail" placeholder="Adresse email" required>
					</div>
					<div class="form-group">
						<input name="password" type="password" class="form-control" id="password" placeholder="Mot de passe" required>
