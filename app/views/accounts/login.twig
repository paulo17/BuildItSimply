{% extends 'layouts/' ~ layout ~ '.twig' %}

{% block body %}

    <div id="loginHead" class="connectionhead">
        <div class="wrapper">
            <h1>Se connecter</h1>

            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                tempor incididunt ut labore et dolore magna aliqua.</p>

            <form id="form-login" method="post" action="{{ home ~ request }}">
                <div class="form-group">
                    <input name="email" type="email" class="form-control" id="mail" placeholder="Adresse email"
                           required>
                </div>
                <div class="form-group">
                    <input name="password" type="password" class="form-control" id="password" placeholder="Mot de passe"
                           required>
                </div>

            </form>
            <hr class="clear"/>

        </div>
    </div>

    <div id="loginInfo">
        <div class="wrapper">
            <button type="submit" class="btn btn-default buttonWhite"
                    onclick="document.getElementById('form-login').submit();">Se connecter
            </button>
            <hr class="clear"/>
        </div>

    </div>
    <div class="push"></div>

    </div><!-- end page -->
{% endblock %}
