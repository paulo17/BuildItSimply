{% extends 'layouts/' ~ layout ~ '.twig' %}
{% block body %}
	<div class="page-header">
		<h3>{{ user.firstname ~ " " ~ user.lastname }} - {{ user.type }}</h3>
	</div>
	<div class="page-content">
		<form method="post" action="{{home ~ request}}" class="form-horizontal">
		<div class="form-group {{ (errors.lastname) ? 'has-error' : '' }}">
			<label for="url" class="col-sm-2 control-label">Site personnel</label>
			<div class="col-sm-10">
				<input type="url" name="url" value="{% if user.url %}{{ user.url }}{% endif %}"
				class="form-control" id="url" placeholder="Url de votre site personnel">
				<span class="help-block with-errors">{% if errors.lastname %}{{ errors.lastname }}{% endif %}</span>
			</div>
		</div>
		{% if user.type == "FREELANCE" %}
			<div class="form-group">
				<label for="type" class="col-sm-2 control-label">Experience en tant que Freelance</label>
				<div class="col-sm-10">
					<select name="type" id="type" class="form-control" required>
						<option value="" disabled>Votre niveau ?</option>
						{% for experience in experiences %}
							<option value="{{ experience }}">{{ experience|lower }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="type" class="col-sm-2 control-label">Comp√©tences</label>
				<div class="col-sm-10">
					<input name="skills" type="text" class="form-control" id="skills">
				</div>
			</div>
		{% endif %}

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-default">Enregistrer les informations</button>
			</div>
		</div>
	</form>

	</div>
{% endblock %}
