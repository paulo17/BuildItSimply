{% extends 'layouts/' ~ layout ~ '.twig' %}

{% block body %}
    <form method="post" action="{{ home ~ request }}" class="form-horizontal">
        <div class="form-group {{ (errors.name) ? 'has-error' : '' }}">
            <label for="name" class="col-sm-2 control-label">Compétence</label>
            <div class="col-sm-10">
                <input type="text" name="name" value="{% if skill.name %}{{ user.name }}{% endif %}"
                       class="form-control" id="name" placeholder="Nom de la compétence">
                <span class="help-block with-errors">{% if errors.name %}{{ errors.name }}{% endif %}</span>
            </div>
        </div>
        <div class="form-group">
            <label for="type" class="col-sm-2 control-label">Catégorie</label>

            <div class="col-sm-10">
                <select name="category_skill_id" id="category_skill_id" class="form-control" required>
                    <option value="" disabled>Categorie ?</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name | capitalize }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Ajouter</button>
            </div>
        </div>
    </form>
{% endblock %}