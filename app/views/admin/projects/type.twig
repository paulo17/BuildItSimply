{% extends 'layouts/' ~ layout ~ '.twig' %}

{% block body %}
    <h2>Ajouter un type de projet</h2>

    <div class="container">
        <div class="jumbotron">
            <h3>Liste des types de projet</h3>
            <ul>
                {% for type in types %}
                    <li>{{ type.type }}</li>
                {% endfor %}
            </ul>
        </div>

        <form method="post" action="{{ home ~ request }}" class="form-horizontal" enctype="multipart/form-data">
            <div class="form-group {{ (errors.type) ? 'has-error' : '' }}">
                <label for="type" class="col-sm-2 control-label">Nom du type</label>

                <div class="col-sm-10">
                    <input type="text" name="type" value="{% if type.name %}{{ type.name }}{% endif %}"
                           class="form-control" id="name" placeholder="Nom du type: exemple Site Web">
                    <span class="help-block with-errors">{% if errors.name %}{{ errors.name }}{% endif %}</span>
                </div>
            </div>
            <div class="form-group {{ (errors.description) ? 'has-error' : '' }}">
                <label for="description" class="col-sm-2 control-label">Description</label>

                <div class="col-sm-10">
                    <textarea name="description" class="form-control" rows="3"
                              placeholder="Description du type de projet"></textarea>
                    <span class="help-block with-errors">{% if errors.description %}{{ errors.description }}{% endif %}</span>
                </div>
            </div>
            <div class="form-group">
                <label for="picture" class="col-sm-2 control-label">Image associ√©</label>

                <div class="col-sm-10">
                    <input type="file" class="btn" id="image" name="image" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="submit" type="submit" class="btn btn-default">Creer le type de project</button>
                </div>
            </div>
        </form>

    </div>
{% endblock %}